<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarFriend"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuyển Sinh Nhật Ngữ"
                android:textColor="@color/text_common"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="2dp"
                android:text="@string/want_to_make_friends"
                android:textSize="14sp"
                android:textColor="@color/grey_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_corner_25_blue_light"
                    android:backgroundTint="@color/grey_light"
                    android:paddingVertical="6dp"
                    android:text="@string/refuse"
                    android:textColor="@color/text_common"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_noto_sans"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_corner_25_blue_light"
                    android:paddingVertical="6dp"
                    android:text="@string/agree"
                    android:textColor="@color/blue1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_noto_sans"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>