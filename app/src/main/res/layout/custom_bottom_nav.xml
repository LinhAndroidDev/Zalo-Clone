<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/messageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMessage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_chat_fill" />

            <TextView
                android:id="@+id/tvMessage"
                style="@style/text_common"
                android:text="@string/message"
                android:textColor="@color/text_icon"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneBookView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPhoneBook"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_phone_book" />

            <TextView
                android:id="@+id/tvPhoneBook"
                style="@style/text_common"
                android:text="@string/phone_book"
                android:textColor="@color/grey_1"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discoverView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDiscover"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_discover" />

            <TextView
                android:id="@+id/tvDiscover"
                style="@style/text_common"
                android:text="@string/discover"
                android:textColor="@color/grey_1"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/diaryView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDiary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_diary" />

            <TextView
                android:id="@+id/tvDiary"
                style="@style/text_common"
                android:text="@string/diary"
                android:textColor="@color/grey_1"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personalView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPersonal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_person" />

            <TextView
                android:id="@+id/tvPersonal"
                style="@style/text_common"
                android:text="@string/personal"
                android:textColor="@color/grey_1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>