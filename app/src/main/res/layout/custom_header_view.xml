<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_common_end">

    <LinearLayout
        android:id="@+id/viewCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconSearch"
            android:layout_marginVertical="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/searchView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/text_search"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/qrCode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_qr_code"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/menuAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_add_menu"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/addFriend"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_add_friend"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/layoutDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/addStory"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_add_story"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_notification_on"
                app:tint="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_setting"
            app:tint="@color/white" />
    </LinearLayout>

    <include
        android:id="@+id/viewChat"
        layout="@layout/header_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/viewSearch"
        layout="@layout/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/headerTitle"
        layout="@layout/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>