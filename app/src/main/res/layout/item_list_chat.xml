<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarFriend"
                android:layout_marginVertical="10dp"
                android:src="@mipmap/ic_launcher"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNameFriend"
                        android:layout_weight="1"
                        android:text="Media box"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_marginStart="5dp"
                        android:text="20/09"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_weight="1"
                        android:text="Chúc một ngày tốt lành, thời tiết Hà Nội hôm nay 23/10: Mây dải rác"
                        android:textSize="14sp"
                        android:textColor="@color/text_common"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avtSeen"
                        android:layout_marginStart="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/newMessage"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvMultiMessage"
                            android:text="2"
                            android:textSize="10sp"
                            android:layout_marginHorizontal="7dp"
                            android:layout_marginVertical="1dp"
                            android:textColor="@color/text_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"/>

                        <View
                            android:id="@+id/singMessage"
                            android:layout_margin="4dp"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginStart="90dp"
            android:background="#E1E1E1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</layout>