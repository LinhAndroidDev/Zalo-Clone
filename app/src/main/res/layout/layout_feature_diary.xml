<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_25_blue_light"
            android:backgroundTint="@color/grey_emotion"
            android:gravity="center"
            android:paddingVertical="7dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_image_news"
                app:tint="#4CAF50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/image"
                android:textColor="@color/text_common"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_corner_25_blue_light"
            android:backgroundTint="@color/grey_emotion"
            android:gravity="center"
            android:paddingVertical="7dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_video_news"
                app:tint="#D12660" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/video"
                android:textColor="@color/text_common"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_corner_25_blue_light"
            android:backgroundTint="@color/grey_emotion"
            android:gravity="center"
            android:paddingVertical="7dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_phone_book_fill"
                app:tint="#5B6CCD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/album"
                android:textColor="@color/text_common"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_corner_25_blue_light"
            android:backgroundTint="@color/grey_emotion"
            android:gravity="center"
            android:paddingVertical="7dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_diary_fill"
                app:tint="#E38568" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/memory"
                android:textColor="@color/text_common"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>