<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".fragment.ReceiveOTPFragment">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/title_app"
            android:textSize="35sp"
            android:textColor="@color/blue1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_noto_sans"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="80dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/note_receive_otp"
            android:textSize="12sp"
            android:textColor="@color/text_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="(+84) 123 456 789"
            android:textColor="@color/text_common"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_activation_code"
            android:textColor="@color/text_common"
            android:textSize="14sp"
            android:textAllCaps="true" />

        <EditText
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_common"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/bg_enter_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btnContinueRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_corner_25_blue_light"
            android:backgroundTint="@color/blue1"
            android:gravity="center_horizontal"
            android:paddingVertical="12dp"
            android:text="@string/confirm"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/font_noto_sans" />

        <TextView
            android:id="@+id/tvTimeReceiveOTP"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/receive_otp_in_time"
            android:textSize="12sp"
            android:textColor="@color/grey_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>