<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/friendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_blue_corner_12">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_friend"
                    app:tint="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/friend_request"
                android:textColor="@color/text_common"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                tools:text="(7)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_blue_corner_12">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_phone_book_fill"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_book_machine"
                    android:textColor="@color/text_common"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp"
                    tools:text="@string/contact_using_zalo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_blue_corner_12">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_birthday"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday_calendar"
                    android:textColor="@color/text_common"
                    android:textSize="14sp" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp"
                    tools:text="@string/track_your_birthday" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/text_hint"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tvAllPhoneBook"
                android:layout_marginStart="10dp"
                tools:text="Tất cả  91"
                android:textSize="14sp"
                android:textColor="@color/text_common"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_corner_25_blue_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_hint"/>

            <TextView
                android:layout_marginStart="15dp"
                android:text="Mới truy cập  9"
                android:textSize="14sp"
                android:textColor="@color/text_grey"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/bg_corner_25_stroke_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/text_hint"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</layout>