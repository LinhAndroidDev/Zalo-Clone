<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomHeaderView">
        <attr name="item_view" format="enum">
            <enum name="chat" value="0" />
            <enum name="phoneBook" value="1" />
            <enum name="discover" value="2" />
            <enum name="diary" value="3" />
            <enum name="personal" value="4" />
            <enum name="room_chat" value="5" />
            <enum name="search" value="6" />
            <enum name="header_title" value="7" />
        </attr>
        <attr name="title_header" format="string" />
    </declare-styleable>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_radius" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_background" format="color|integer"/>
        <attr name="ci_selected_background" format="color|integer"/>
        <attr name="ci_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ci_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr format="integer" name="itemCount"/>
        <attr format="integer" name="lineEndColor"/>
        <attr format="integer" name="lineStartColor"/>
        <attr format="integer" name="dashColor"/>
        <attr format="integer" name="lineCount"/>
        <attr format="float" name="dashLength"/>
        <attr format="float" name="spaceLength"/>
        <attr format="boolean" name="showDash"/>
    </declare-styleable>

    <declare-styleable name="IndexFastScrollRecyclerView">
        <attr name="setIndexTextSize" format="integer" />
        <attr name="setIndexbarWidth" format="float" />
        <attr name="setIndexbarMargin" format="float" />
        <attr name="setPreviewPadding" format="integer" />
        <attr name="setPreviewTextSize" format="integer" />
        <attr name="setPreviewColor" format="color|string" />
        <attr name="setPreviewTextColor" format="color|string" />
        <attr name="setPreviewTransparentValue" format="float" />
        <attr name="setPreviewCornerRadius" format="integer" />
        <attr name="setIndexBarCornerRadius" format="integer" />
        <attr name="setIndexBarTransparentValue" format="float" />
        <attr name="setIndexBarShown" format="boolean" />
        <attr name="setTransientIndexBar" format="boolean" />
        <attr name="setIndexBarColor" format="color|string" />
        <attr name="setIndexBarTextColor" format="color|string" />
        <attr name="setIndexBarHighlightTextColor" format="color|string" />
        <attr name="setIndexBarStrokeWidth" format="integer" />
        <attr name="setIndexBarStrokeColor" format="color|string" />
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ItemViewProfile">
        <attr name="title" format="string" />
        <attr name="detail" format="string" />
        <attr name="icon" format="reference" />
        <attr name="color_icon" format="reference" />
        <attr name="show_according" format="boolean" />
        <attr name="show_divider" format="boolean" />
        <attr name="end_icon">
            <enum name="warning" value="1" />
            <enum name="contact" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ItemFeaturePersonal">
        <attr name="title_feature" format="string" />
        <attr name="icon_feature" format="reference" />
        <attr name="color_icon_feature" format="color" />
    </declare-styleable>
</resources>